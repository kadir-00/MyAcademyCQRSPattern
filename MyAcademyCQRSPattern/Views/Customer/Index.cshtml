@model List<GetCustomerQueryResult>
@{
    ViewData["Title"] = "Index";
}

<a href="/Customer/CreateCustomer/" class="btn btn-success mb-3">Yeni Müşteri Ekle</a>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Müşteri Listesi</h5>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover table-borderless align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Şehir</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)

                {
                    <tr>
                        <th>@item.CustomerID</th>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.City</td>
                        <td>
                            <a href="/Customer/UpdateCustomer/@item.CustomerID"
                                class="btn btn-sm btn-outline-warning">Düzenle</a>
                            <a href="/Customer/DeleteCustomer/@item.CustomerID"
                                class="btn btn-sm btn-outline-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
